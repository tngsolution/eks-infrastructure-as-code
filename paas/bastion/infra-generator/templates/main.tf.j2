# IAM role et instance profile pour SSM
resource "aws_iam_role" "bastion_ssm" {
  name = "${var.prefix}-bastion-ssm-role"
  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [{
      Effect = "Allow"
      Principal = { Service = "ec2.amazonaws.com" }
      Action = "sts:AssumeRole"
    }]
  })
  tags = var.global_tags
}

resource "aws_iam_role_policy_attachment" "bastion_ssm_core" {
  role       = aws_iam_role.bastion_ssm.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonSSMManagedInstanceCore"
}

resource "aws_iam_instance_profile" "bastion_ssm" {
  name = "${var.prefix}-bastion-ssm-profile"
  role = aws_iam_role.bastion_ssm.name
}
resource "aws_route53_record" "bastion" {
  zone_id = local.scan.route53[0].zone_id
  name    = "bastion.{{ environment }}.${local.scan.route53[0].zone_name}"
  type    = "CNAME"
  ttl     = 300
  records = [aws_lb.bastion.dns_name]
}

# Jinja2 template for Bastion stack: EC2 with ASG and ALB
data "aws_ami" "amazon_linux" {
  most_recent = true
  owners      = ["amazon"]
  filter {
    name   = "name"
    values = ["amzn2-ami-hvm-*-x86_64-gp2"]
  }
  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
}

resource "aws_launch_template" "bastion" {
  image_id      = data.aws_ami.amazon_linux.id
  instance_type = {{ instance_type | tojson }}
  key_name      = {{ key_name | tojson }}
  vpc_security_group_ids = [local.bastion_sg_id]

  user_data = base64encode(
    templatefile("${path.module}/cloud_init.yaml", {
      env    = var.prefix
      region = var.aws_region
      TERRAFORM_VERSION  = var.terraform_version
    })
  )

  iam_instance_profile {
    name = aws_iam_instance_profile.bastion_ssm.name
  }

  instance_market_options {
    market_type = "spot"
  }

  tags = merge(
    var.global_tags,
    {
      Name = "${var.prefix}"
    }
  )
}

resource "aws_autoscaling_group" "bastion" {
  desired_capacity     = {{ asg_desired }}
  max_size            = {{ asg_max }}
  min_size            = {{ asg_min }}
  vpc_zone_identifier = local.private_subnet_ids
  launch_template {
    id      = aws_launch_template.bastion.id
    version = "$Latest"
  }
  target_group_arns = [aws_lb_target_group.bastion.arn]
  health_check_type = "EC2"

  instance_refresh {
      strategy = "Rolling"
      preferences {
        min_healthy_percentage = 50
      }
      triggers = ["launch_template"]
    }
  tag {
    key                 = "Name"
    value               = "${var.prefix}-{{ environment }}"
    propagate_at_launch = true
  }
}

resource "aws_lb" "bastion" {
  name               = "${var.prefix}-alb"
  internal           = false
  load_balancer_type = "network"
  subnets            = local.public_subnet_ids
  security_groups    = [local.public_bastion_sg_id]
  tags = merge(
    var.global_tags,
    {
      Name = "${var.prefix}"
    }
  )
}

resource "aws_lb_target_group" "bastion" {
  name     = "${var.prefix}-tg"
  port     = 22
  protocol = "TCP"
  vpc_id   = local.vpc_id
  target_type = "instance"
  health_check {
    protocol = "TCP"
    port     = "22"
  }
  tags = merge(
    var.global_tags,
    {
      Name = "${var.prefix}"
    }
  )
}

resource "aws_lb_listener" "bastion" {
  load_balancer_arn = aws_lb.bastion.arn
  port              = 22
  protocol          = "TCP"
  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.bastion.arn
  }
}
