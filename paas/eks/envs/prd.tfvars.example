cluster_name = "eks-prd"
region = "eu-west-3"

# Production: provide explicit real IDs
vpc_id = ""
private_subnet_ids = []
public_subnet_ids  = []

# Node group sizing (production: more conservative with higher max)
node_group_desired_capacity = 3
node_group_min_capacity     = 2
node_group_max_capacity     = 6

create_ecr = true
create_vpc_endpoints = true

# Optional: provide route tables for S3 gateway endpoint
# s3_route_table_ids = ["rtb-0123456789abcdef0"]

# Tags for billing and organization
# Production environment: critical for cost allocation and compliance
tags = {
  Environment    = "PRD"
  CostCenter     = "platform"             # Bill to this cost center
  Owner          = "platform-team"        # Team responsible for the resource
  Project        = "aws-training"         # Project name for grouping
  ManagedBy      = "terraform"            # Infrastructure as Code identifier
  CreatedDate    = "2025-12-10"           # For cost tracking and lifecycle
  BackupPolicy   = "daily"                # Backup retention strategy (production critical)
  LifecycleStage = "production"           # Useful for cleanup scripts
  Compliance     = "true"                 # Flag for compliance/audit purposes
  DataClassification = "internal"         # Data sensitivity level
  CostOptimization = "spot-eligible"      # Cost optimization strategy
}

