# Jinja2 loop for public routes
{% if routes is defined %}
  {% for route in routes if route.type == 'public' %}
resource "aws_route_table" "{{ route.route_table_name }}" {
  vpc_id = aws_vpc.main.id
  route {
    cidr_block = "{{ route.destination_cidr_block }}"
    gateway_id = aws_internet_gateway.igw.id
  }
  tags = merge(
    var.global_tags,
    {
      Name = "{{ route.route_table_name }}"
    }
  )
}
  {% endfor %}

# Jinja2 loop for private routes
  {% for route in routes if route.type == 'private' %}
resource "aws_route_table" "{{ route.route_table_name }}" {
  vpc_id = aws_vpc.main.id
  route {
    cidr_block = "{{ route.destination_cidr_block }}"
    nat_gateway_id = aws_nat_gateway.nat.id
  }
  tags = merge(
    var.global_tags,
    {
      Name = "{{ route.route_table_name }}"
    }
  )
}
  {% endfor %}
{% endif %}

# Associate each subnet with the correct route table
{% if subnets is defined %}
{% for subnet in subnets %}
resource "aws_route_table_association" "{{ subnet.name }}_rt_assoc" {
  subnet_id      = aws_subnet.{{ subnet.name }}.id
  route_table_id = aws_route_table.{{ 'tngs-fr-' + environment + '-public-rt' if subnet.map_public else 'tngs-fr-' + environment + '-private-rt' }}.id
}
{% endfor %}
{% endif %}
