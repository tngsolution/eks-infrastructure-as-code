{% if vpc is defined and subnets is defined and subnets|length > 0 %}
{% set public_subnet = subnets | selectattr('map_public', 'equalto', true) | list | first %}

# Internet Gateway
resource "aws_internet_gateway" "igw" {
  vpc_id = aws_vpc.main.id

  tags = merge(
    var.global_tags,
    { Name = "{{ vpc.name }}-igw" }
  )
}

# Elastic IP for NAT Gateway
resource "aws_eip" "nat" {
  domain = "vpc"

  tags = merge(
    var.global_tags,
    { Name = "{{ public_subnet.name }}-nat-eip" }
  )
}

# NAT Gateway
resource "aws_nat_gateway" "nat" {
  allocation_id = aws_eip.nat.id
  subnet_id     = aws_subnet.{{ public_subnet.name }}.id

  tags = merge(
    var.global_tags,
    { Name = "{{ public_subnet.name }}-nat" }
  )
}
{% endif %}
